{
  "name": "angular-sandbox",
  "version": "0.0.1",
  "engines": {
    "node": "6.10.1"
  },
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "client:build": "ng build --prod --sourcemaps",
    "server:build": "tsc --project server",
    "client:test": "ng test",
    "server:test": "npm run server:build && gulp server:test",
    "client:jest": "jest",
    "client:jest-watch": "jest --watch",
    "client:lint": "ng lint",
    "e2e": "ng e2e",
    "dev-server": "nf start --procfile Procfile.dev",
    "heroku-postbuild": "npm run client:build && npm run server:build",
    "start": "node dist/server/server.js"
  },
  "jest": {
    "roots": [
      "./client",
      "./server"
    ],
    "preset": "jest-preset-angular",
    "globals": {
      "__TS_CONFIG__": "./client/tsconfig.spec.json",
      "__TRANSFORM_HTML__": true
    },
    "testRegex": ".*\\.spec\\.ts$",
    "setupTestFrameworkScriptFile": "./client/testing/setup-jest.ts",
    "coverageReporters": [
      "json",
      "lcov",
      "text-summary"
    ],
    "coveragePathIgnorePatterns": [
      "./client/testing/"
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "4.1.2",
    "@angular/compiler": "4.1.2",
    "@angular/core": "4.1.2",
    "@angular/forms": "4.1.2",
    "@angular/http": "4.1.2",
    "@angular/platform-browser": "4.1.2",
    "@angular/platform-browser-dynamic": "4.1.2",
    "@angular/router": "4.1.2",
    "bluebird": "3.5.0",
    "body-parser": "1.17.1",
    "bootstrap-sass": "3.3.7",
    "core-js": "2.4.1",
    "express": "4.15.2",
    "faker": "4.1.0",
    "immutable": "4.0.0-rc.2",
    "intl": "1.2.5",
    "lodash": "4.17.4",
    "rxjs": "5.4.0",
    "zone.js": "0.8.10"
  },
  "devDependencies": {
    "@angular/cli": "1.0.3",
    "@angular/compiler-cli": "4.1.2",
    "@types/express": "4.0.35",
    "@types/jasmine": "2.5.47",
    "@types/node": "7.0.18",
    "@types/sinon": "2.2.1",
    "codelyzer": "2.0.1",
    "espower-loader": "1.2.2",
    "foreman": "2.0.0",
    "gulp": "3.9.1",
    "gulp-mocha": "4.3.1",
    "jasmine-core": "2.6.1",
    "jasmine-spec-reporter": "4.1.0",
    "jest": "20.0.1",
    "jest-preset-angular": "2.0.2",
    "karma": "1.7.0",
    "karma-chrome-launcher": "2.1.1",
    "karma-cli": "1.0.1",
    "karma-coverage-istanbul-reporter": "1.2.1",
    "karma-firefox-launcher": "1.0.1",
    "karma-jasmine": "1.1.0",
    "karma-jasmine-html-reporter": "0.2.2",
    "karma-phantomjs-launcher": "1.0.4",
    "nodemon": "1.11.0",
    "power-assert": "1.4.2",
    "protractor": "5.1.1",
    "sinon": "2.2.0",
    "supertest": "3.0.0",
    "ts-node": "3.0.4",
    "tslint": "4.5.1",
    "typescript": "2.3.2"
  }
}
